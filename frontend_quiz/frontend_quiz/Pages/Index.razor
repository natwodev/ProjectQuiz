@page "/"

<PageTitle>Trang Chủ</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Hệ Thống Thi Trắc Nghiệm</h1>
            <p class="lead">Nơi kiểm tra kiến thức của bạn</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Danh Sách Bài Thi</h5>
                    <p class="card-text">Xem và tham gia các bài thi trắc nghiệm</p>
                    <a href="/quizzes" class="btn btn-primary">Xem Bài Thi</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Bài Thi Của Tôi</h5>
                    <p class="card-text">Xem lại các bài thi đã làm</p>
                    <a href="/my-quizzes" class="btn btn-success">Xem Kết Quả</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Hướng Dẫn</h5>
                    <p class="card-text">Tìm hiểu cách sử dụng hệ thống</p>
                    <a href="/guide" class="btn btn-info">Xem Hướng Dẫn</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thông Báo</h5>
                    <div class="list-group">
                        <div class="list-group-item">
                            <h6 class="mb-1">Hệ thống đang hoạt động bình thường</h6>
                            <p class="mb-1">Bạn có thể bắt đầu làm bài thi ngay bây giờ</p>
                        </div>
                        <div class="list-group-item">
                            <h6 class="mb-1">Cập nhật mới</h6>
                            <p class="mb-1">Đã thêm các bài thi mới vào hệ thống</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

